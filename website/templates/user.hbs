{{#*inline "page"}}

<!-- 
Users -->
<section class="section">
    <div class="container">
        <div class="columns is-mobile">
            <div class="column">
                <p class="content is-size-3">Users</p>
            </div>
            <div class="column has-text-right">
                <a class="button" href="/admin/user/new">
                    <span class="icon is-small">
                        <i class="far fa-plus-square"></i>
                    </span>
                    <span>Add user</span>
                </a>
            </div>
        </div>
        <table class="table is-striped">
            {{#each data}}
            <tr>
                <td>{{@index}}</td>
                <td>@{{this.username}}</td>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>
                    <div class="button-group">
                        <a class="button is-small">
                            <span class="icon">
                                <i class="fas fa-key"></i>
                            </span>
                            <span>Reset password</span>
                        </a>
                    </div>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</section>

{{/inline}}
{{~> (parent)~}}